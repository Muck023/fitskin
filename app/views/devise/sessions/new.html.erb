<div class='back_main_color'></div>

<div class='user'>

  <div class='back_head'>
    <%= link_to image_tag("fitskin_logo.png", class:"fitskin_logo"), "/" %>
    <div class='user_title'>ログイン</div>
  </div>

  <div class='back_main'>
    <div class='user_form'>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <label class="user_label">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input-default" %>
        </div>

        <div class="field">
          <label class="user_label">パスワード</label>
          <%= f.password_field :password, autocomplete: "current-password", class:"input-default" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <label>次回から自動的にログイン</label>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class:"submit" %>
          <div class='login_links'>
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "新規登録", new_registration_path(resource_name), class:"a_login" %>
            <% end %>
          /
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "パスワードを忘れた方", new_password_path(resource_name), class:"a_login" %>
            <% end %>
          </div>
        </div>
      <% end %>

    </div>
  </div>

</div>